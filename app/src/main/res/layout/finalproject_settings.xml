<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/finalProjSettingsDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/final_project_settings_default">
    </TextView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

    <TextView
        android:id="@+id/finalProjSettingsDefNoOfDays"
        android:layout_weight="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="@string/final_project_settings_def_no_of_days"
        android:textSize="20dp"
        android:ems="10" >
    </TextView>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/finalProjSettingsDefNoOfDaysValue"
        android:layout_weight="2"
        android:textSize="20dp"/>


</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/finalProjSettingsDefTime"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:ems="10"
            android:textSize="20dp"
            android:text="@string/final_project_settings_def_time">
        </TextView>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="2"
            android:textSize="20dp"
            android:id="@+id/finalProjSettingsDefTimeValueHour"
            android:hint="hour"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="2"
            android:textSize="20dp"
            android:hint="min"
            android:id="@+id/finalProjSettingsDefTimeValueMin"
            android:layout_weight="1"/>



    </LinearLayout>

    </LinearLayout>